{% if pagination.pages > 1 %}
    <nav role="navigation" class="flex justify-center items-center my-8">
        {% if pagination.previous %}
            <a href="{{ pagination.previous.url }}" class="border bg-custom-grayBackground text-custom-whitetext hover:bg-custom-pink  px-8 py-3 mx-1 rounded-sm font-medium">Précédent</a>
        {% endif %}

        {% if pagination.next %}
            <a href="{{ pagination.next.url }}" class="border bg-custom-grayBackground text-custom-whitetext hover:bg-custom-pink  px-8 py-3 mx-1 rounded-sm font-medium">Suivant</a>
        {% endif %}
    </nav>
{% endif %}