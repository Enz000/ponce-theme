* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}
$color-pink: #e50a7b;
$color-text: #fbfbfb;
$color-card: #ededed;
$color-black: #202020;

body,
html {
  font-family: "Poppins", sans-serif;
  overflow-x: hidden;
}
a {
  text-decoration: none;
}
h2 {
  font-weight: bold;
  font-size: 1em * 1.5;
  
}
h3 {
  font-size: 1em * 1.15;
  margin: 1em 0;
}
// .z_index-hero{
