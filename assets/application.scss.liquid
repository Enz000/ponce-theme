* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}
$color-pink: #e50a7b;
$color-text: #fbfbfb;
$color-card: #ededed;
$color-black: #202020;

body,
html {
  font-family: "Poppins", sans-serif;
scroll-behavior: smooth;
}

.test {
  position: absolute;
  display: flex;
  bottom: 0;
  width: 100%;
  z-index: 10;
  height: 100px;
  span {
    display: inline-block;
    font-size: 8em;
    line-height: 105px;
    font-weight: 600;

    height: 100%;
    margin-right: 55px;
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke: 3px $color-pink;
    -webkit-animation: slideshow1 5s infinite linear;
    animation: slideshow1 5s infinite linear;
  }
}


  .hero_left_content {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: end;
    .hero_left_image {
      margin: 1.5rem;
      height: 50%;
      width: 50%;
      display: flex;
      justify-content: center;
      align-items: center;

      img {
        display: block;
        margin: auto;
        width: 100%;
        object-fit: contain;
      }
      .product-1 {
        background-color: white;
      }
    }
  }
  .hero_right_content {
    position: relative;
    display: flex;
    align-items: center;
    .hero_content__right {
      margin: 1.5rem;
      display: flex;
      align-items: center;
      height: 50%;
      display: flex;
      .hero_right_info {
        color: $color-text;
        text-transform: uppercase;

        height: 100%;
        //  width: 100%;
        align-items: center;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
      }
      h2 {
        font-size: 3em;
        font-weight: 600;
      }
      button {
        
        padding: 1em;
        width: 300px;
        border-radius: 5px;
        font-weight: 600;
        letter-spacing: 0.25em;
        position: relative;
        img {
          position: absolute;
          height: 50px;
          width: 50px;
          top: -20px;
          left: -20px;
         animation: flowersAnimation 10s infinite linear;
         -webkit-animation: flowersAnimation 10s infinite linear;
        }
      }
      
    }
  }



.flower-anim {
  animation: flowersAnimation 10s infinite linear;
  -webkit-animation: flowersAnimation 10s infinite linear;
}
//ANIMATION
@keyframes slideshow1 {
  0% {
    transform: translateX(0px);
  }

  100% {
    transform: translateX(-451px);
  }
}
@keyframes flowersAnimation {
  0% {
    transform: rotateZ(0);
  }

  100% {
    transform: rotateZ(-360deg);
  }
}
