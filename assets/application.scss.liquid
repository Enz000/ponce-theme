.test {
  position: absolute;
  display: flex;
  bottom: 0;
  width: 100%;
  z-index: 10;
  height: 100px;
  span {
    display: inline-block;
    font-size: 8em;
    line-height: 105px;
    font-weight: 600;

    height: 100%;
    margin-right: 55px;
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke: 3px $color-pink;
    -webkit-animation: slideshow1 5s infinite linear;
    animation: slideshow1 5s infinite linear;
  }
}
.hero_container {
  overflow: hidden;
  position: relative;

  width: 100%;
  z-index: 1;
  height: 90vh;
  .hero_background_image {
    object-fit: cover;
    height: 100%;
    width: 100%;
    img {
      display: block;
      margin: 0;
      padding: 0;
    }
  }
 
   
  }

  .hero_container_info {
    z-index: 3;
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .hero_left_content {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: end;
    .hero_left_image {
      margin: 1.5rem;
      height: 50%;
      width: 50%;
      display: flex;
      justify-content: center;
      align-items: center;

      img {
        display: block;
        margin: auto;
        width: 100%;
        object-fit: contain;
      }
      .product-1 {
        background-color: white;
      }
    }
  }
  .hero_right_content {
    position: relative;
    display: flex;
    align-items: center;
    .hero_content__right {
      margin: 1.5rem;
      display: flex;
      align-items: center;
      height: 50%;
      display: flex;
      .hero_right_info {
        color: $color-text;
        text-transform: uppercase;

        height: 100%;
        //  width: 100%;
        align-items: center;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
      }
      h2 {
        font-size: 3em;
        font-weight: 600;
      }
      button {
        
        padding: 1em;
        width: 300px;
        border-radius: 5px;
        font-weight: 600;
        letter-spacing: 0.25em;
        position: relative;
        img {
          position: absolute;
          height: 50px;
          width: 50px;
          top: -20px;
          left: -20px;
         animation: flowersAnimation 10s infinite linear;
         -webkit-animation: flowersAnimation 10s infinite linear;
        }
      }
      //   left: 20px;
    }
  }

.h2-section{
    h2{
        border-bottom: 0.15em solid $color-pink ;
    }
    
}
.section{
  background-color: $color-text;

overflow: hidden;
    margin: auto;
    
  padding: 2em 0;
  .section_container {
    width: 90%;
    margin: auto;
  }
  .section_title {
    padding: 2em 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    h2 {
      border-bottom: 0.15em solid $color-pink;
    }
  }
  .section_card_wrapper {
    display: grid;
    grid-template-columns: repeat(4,1fr);
    gap: 4em;
    place-content: center;


    .card {
      text-align: center;
        display: inline-block;

      margin: auto;

      height: 90%;
      width: 290px;

      .card_background {
        border-radius: 10px;
        width: 300px;
        height: 100%;
       
        background-color: #f6f6f6;
      }
     
      .card_image {
        width: 100%;
        object-fit: contain;
        transition: all 0.5s ease-in-out;
        display: inline-block;
        height: 100%;
        &:hover {
            opacity: 0.7;
          }
      }
     
    }
  }
}
.products{
    background: $color-black;
    color: $color-text;
 
   
}
.flower-anim {
  animation: flowersAnimation 10s infinite linear;
  -webkit-animation: flowersAnimation 10s infinite linear;
}
//ANIMATION
@keyframes slideshow1 {
  0% {
    transform: translateX(0px);
  }

  100% {
    transform: translateX(-451px);
  }
}
@keyframes flowersAnimation {
  0% {
    transform: rotateZ(0);
  }

  100% {
    transform: rotateZ(-360deg);
  }
}
