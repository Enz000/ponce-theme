<div class="bg-custom-grayBackground relative text-custom-whitetext">
   
    <div class="max-w-2xl mx-auto pb-10 pt-16 px-4 sm:py-20 sm:px-6 lg:max-w-7xl lg:px-8 ">
      <div class=" pb-8 flex justify-center   ">
        <h2 class="m-auto font-bold text-xl border-b-2 border-custom-pink">{{ section.settings.title | upcase }}</h2>
      </div>
  
  
      <div class="grid grid-cols-2 gap-y-12 sm:grid-cols-2 gap-x-8 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8 z-20">
        {% assign product_limit = section.settings.product_count %}
        {% for product in collections[section.settings.all_products_collection].products limit: product_limit%}
        <a href="{{ product.url }}" class="group">
          <div class="w-full shadow-md aspect-w-1 aspect-h-1 bg-custom-whitecard rounded-lg overflow-hidden xl:aspect-w-7 xl:aspect-h-8">
            <img src="{{ product.featured_media.preview_image | img_url : 'grande'}}" alt="{{ product.title }}" class="w-full h-full object-center object-cover group-hover:opacity-75 transition-all duration-200 ">
          </div>
          <h3 class="mt-4 text-base	 ">
            {{ product.title | capitalize }}
          </h3>
          <p class="mt-1 text-lg font-medium ">
            {{ product.price_max | money }}
          </p>
        </a>
        {% endfor %}
      
      </div>
      <div class="text-center my-6">
        <a href="{{ section.settings.all_products_collection.url }}"><button class="bg-custom-pink  hover:opacity-75 transition duration-200 text-center text-custom-whitetext font-semibold font-heading py-5 px-8 rounded-md uppercase ">{{ section.settings.button_text }}</button></a>
      </div>
    </div>
    
  </div>
  
    {% schema %}
  {
      "name": "All Products Collection",
      "class": "all_products_section",
      "settings": [
          {
              "type": "collection",
              "id": "all_products_collection",
              "label": "Collection"
          },
          {
              "type": "text",
              "id": "title",
              "default":"Nos Produits",
              "label": "Title"
          },
          {
              "type": "text",
              "id": "button_text",
              "default":"VOIR LA COLLECTION",
              "label": "Texte dans le bouton"
          },
          {
              "type": "range",
              "id": "product_count",
              "min": 2,
              "step": 2,
              "max": 12,
              "label": "Nombre de produit Ã  afficher",
              "default": 4
            }
      ],
      "presets": [
          {
              "category": "Collection",
              "name":"All Products Collection"
          }
      ]
  }
  {% endschema %}