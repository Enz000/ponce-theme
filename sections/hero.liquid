<section class="text-gray-600 body-font h-90v">
    
    <div class="container m-auto h-full flex px-5 py-24 md:flex-row flex-col items-center">
      
      <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
        {% if section.settings.image_product !=blank %}
        <a href="{{ section.settings.product_link }}"><img class="object-cover object-center rounded" alt="hero" src="{{ section.settings.image_product | img_url: '500x500' }}"></a>
        {% else %}
        {% capture current %}{% cycle 1,2 %}{% endcapture %}
        {{ "product-" | append: current | placeholder_svg_tag : "product-1" }}
    {% endif %}
      </div>
      <div class="lg:flex-grow md:w-1/2 lg:pl-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
        <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">Before they sold out
          <br class="hidden lg:inline-block">readymade gluten
        </h1>
        <p class="mb-8 leading-relaxed">Copper mug try-hard pitchfork pour-over freegan heirloom neutra air plant cold-pressed tacos poke beard tote bag. Heirloom echo park mlkshk tote bag selvage hot chicken authentic tumeric truffaut hexagon try-hard chambray.</p>
        <div class="flex w-full justify-center">

          <button class=" relative bg-custom-pink  text-center text-custom-whitetext font-semibold font-heading py-5 px-8 rounded-md uppercase hover:bg-custom-grayBackground transition duration-200"><img class="absolute -top-5 -left-5 w-12 flower-anim" src="https://cdn.shopify.com/s/files/1/0607/6163/7097/files/BG.png?v=1636389553" alt="flower">VOIR LA COLLECTION</button>
          
        </div>
      </div>
    </div>
    <!-- <img src="https://cdn.shopify.com/s/files/1/0607/6163/7097/files/Sans-titre-1.jpg?v=1636731418" class="w-full h-full object-cover absolute " alt=""> -->
  </section>
{% schema %}
{
    "name": "Container",
    "class": "hero-section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Heading Background Title"
        },
        {
            "type": "url",
            "id": "product_link",
            "label": "Lien du Produit"
        },
        {
            "type": "image_picker",
            "id": "image_product",
            "label": "Image Produit"
        },
        {
            "type": "text",
            "id": "title",
            "default": "Example Heading",
            "label": "Heading Title"
        },
        {
            "type": "richtext",
            "id": "description",
            
            "label": "Heading Description"
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "Button",
            "label": "Heading Button Label"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Heading Button Link"
        }
    ],
    "presets": [
        {
            "category": "Hero",
            "name":"Hero"
        }
    ]
}
{% endschema %}