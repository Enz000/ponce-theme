
<section class="text-gray-600 body-font relative z-20 h-90v">
    <img src="https://cdn.shopify.com/s/files/1/0607/6163/7097/files/Sans-titre-1.jpg?v=1636731418" class="lg:object-cover hidden z-10  w-full h-full absolute bottom-0 sm:block" alt="">
    
    <div class="container absolute z-30 m-auto h-full flex lg:justify-center px-5 py-24 md:flex-row flex-col items-center justify-center"> 
      <div class="lg:w-1/2   sm:w-full">
        {% if section.settings.image_product !=blank %}
        <a href="{{ section.settings.product_link }}"><img class="object-contain lg:w-3/4 m-auto md:w-full "  alt="hero" src="{{ section.settings.image_product | img_url: 'large' }}"></a>
        {% else %}
        {% capture current %}{% cycle 1,2 %}{% endcapture %}
        {{ "product-" | append: current | placeholder_svg_tag : "product-1" }}
    {% endif %}
      </div>
      <div class="lg:w-1/2  flex flex-col  mb-16 md:mb-0 sm:mb-2  text-center">
        <h1 class="title-font sm:text-4xl text-3xl mb-4 font-bold text-custom-grayBackground">{{ section.settings.title }}
        </h1>
        <p class="mb-8 leading-relaxed">{{ section.settings.description }}</p>
        <div class="flex w-full justify-center">

         <a href="{{ section.settings.button_link }}"><button class="relative bg-custom-pink text-center text-custom-whitetext font-semibold font-heading rounded-md  lg:text-base py-5 px-8  uppercase hover:bg-custom-grayBackground transition duration-200 sm: text-xs py-3 px-9  "><img class="absolute -top-5 -left-5 w-12 flower-anim" src="https://cdn.shopify.com/s/files/1/0607/6163/7097/files/BG.png?v=1636389553" alt="flower">VOIR LA COLLECTION</button></a>
          
        </div>
      </div>
    </div>
    <div class="test">
        <span>FLEUR&nbsp; </span>
        <span>FLEUR&nbsp; </span>
        <span>FLEUR&nbsp; </span>
        <span>FLEUR&nbsp; </span>
        <span>FLEUR&nbsp; </span>
        <span>FLEUR&nbsp; </span>
    </div>
  </section>
{% schema %}
{
    "name": "Container",
    "class": "hero-section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image de fond"
        },
        {
            "type": "url",
            "id": "product_link",
            "label": "Lien du Produit"
        },
        {
            "type": "image_picker",
            "id": "image_product",
            "label": "Image Produit"
        },
        {
            "type": "text",
            "id": "title",
            "default": "Example Heading",
            "label": "Titre du hero"
        },
        {
            "type": "text",
            "id": "description",
            "default": "texte mais tu n'es pas obliger d'en mettre",
            "label": "Petit texte si tu souhaites en mettre un"
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "Button",
            "label": "Heading Button Label"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Heading Button Link"
        }
    ],
    "presets": [
        {
            "category": "Hero",
            "name":"Hero"
        }
    ]
}
{% endschema %}